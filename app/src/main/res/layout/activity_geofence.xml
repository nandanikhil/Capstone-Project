<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_geofence"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.nikhil.reached.GeoFenceActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:popupTheme="@style/Theme.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:titleTextColor="@color/primary_text"
        android:visibility="visible" />


    <TextView
        android:id="@+id/textLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginEnd="@dimen/dimen_5dp"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:text="@string/locationLabel"
        android:textSize="@dimen/dimen_20dp"


        />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/autoCompleteEditTextWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLabel"
        android:layout_marginEnd="@dimen/dimen_5dp"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:textColorHint="#c1c2c4"
        app:hintAnimationEnabled="true"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_location_hint" />

    </android.support.design.widget.TextInputLayout>


</RelativeLayout>
